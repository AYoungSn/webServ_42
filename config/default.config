server {
	server_name webserv
	listen 0.0.0.0:8080

	root ./www/html
	index index.html

	allow_methods GET

	autoindex off
	client_body_limit 256 

	location /board {
		allow_methods GET
		root ./www/html/contents
	}

	location /board/content {
		allow_methods GET POST DELETE
		root ./www/html/contents
	}

	location /cgi {
		allow_methods GET
		cgi_info cgi_tester hello world
	}
}

